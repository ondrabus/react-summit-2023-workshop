---
import BaseHead from '../components/BaseHead.astro'
import Menu from '../components/Menu.astro'
import Footer from '../components/Footer.astro'

const { title, isHomepage } = Astro.props
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@700&family=Roboto:wght@100;400;700&family=Work+Sans:wght@300;400;600&display=swap" rel="stylesheet">
        <BaseHead title={title} description={title} />
	</head>
	<body>
        <header class={`${isHomepage ? 'home': ''}`}>
            <div class="container">
                <a class="logo" href="/">KontentAir</a>
                <Menu />
            </div>
        </header>
        <main>
            <slot />
        </main>
        <Footer />
	</body>
</html>

<style lang="sass" is:global>
.container
    width: 100%
    margin: auto
    max-width: 1400px
    padding-bottom: 30px

h1
    text-transform: uppercase
    font-size: 5rem
    font-weight: 700
    margin: 2rem
    font-family: Roboto, sans-serif

hr
    width: 20%
    color: #eee
</style>

<style lang="sass">
html, body
    margin: 0
    padding: 0
    height: 100%
    width: 100%

body
    font-family: 'Work Sans'
    font-weight: 400
    text-align: center
    display: flex
    flex-direction: column
    position: relative

main
    flex-grow: 1

header
    width: 100%
    height: 120px
    z-index: 1
    border-bottom: 1px solid rgb(122, 122, 122)
    background: #000

    &.home
        background: transparent

    div
        display: flex
        justify-content: space-between
        line-height: 3rem
        padding: 2rem
        flex-direction: row

.logo
    font-family: 'Roboto'
    font-weight: 100
    font-size: 3rem
    text-decoration: none
    color: #eee
    text-transform: uppercase
</style>